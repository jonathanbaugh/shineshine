{
	"manifest_version": 2,
	"name": "ShineShine: The Reddit Positivity Plugin",
	"version": "1.0",
	"description": "Replaces the negativity with positivity.",
	"content_scripts": 
	[
		{
			"matches": [
				"http://reddit.com/*",
				"https://reddit.com/*",
				"http://*.reddit.com/*",
				"https://*.reddit.com/*"
			],
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	]
}

